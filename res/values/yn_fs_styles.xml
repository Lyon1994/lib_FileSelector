<resources>

    <style name="yn_fs_AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/yn_fs_main_color</item>
        <item name="colorPrimaryDark">@color/yn_fs_main_color</item>
        <item name="colorAccent">@color/yn_fs_main_color</item>
        <item name="colorControlNormal">@android:color/white</item>
        <item name="android:windowBackground">@color/yn_fs_windowBackground</item>
    </style>

    <style name="yn_fs_AppTheme_Dark" parent="Theme.AppCompat.NoActionBar">
        <item name="colorPrimary">@color/yn_fs_main_color</item>
        <item name="colorPrimaryDark">@color/yn_fs_main_color_dark</item>
        <item name="colorAccent">@color/yn_fs_main_color</item>
        <item name="colorControlNormal">@android:color/white</item>
        <item name="android:windowBackground">@color/yn_fs_windowBackground</item>
    </style>

    <style name="yn_fs_styleViewToolBar">
        <item name="titleTextColor">?attr/colorControlNormal</item>
        <item name="android:background">?attr/colorPrimary</item>
        <item name="subtitleTextColor">?attr/colorControlNormal</item>
    </style>

    <style name="yn_fs_styleTextView">
        <item name="android:textColor">?attr/colorPrimary</item>
        <item name="android:textSize">@dimen/yn_fs_size_recyler_view_item_text_size</item>
    </style>

</resources>